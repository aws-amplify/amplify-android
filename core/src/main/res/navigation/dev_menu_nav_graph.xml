<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dev_menu_nav_graph"
    app:startDestination="@id/main_view">

    <fragment
        android:id="@+id/main_view"
        android:name="com.amplifyframework.core.DevMenuMainView"
        tools:layout="@layout/fragment_main_view" >
        <action
            android:id="@+id/show_file_issue_view"
            app:destination="@id/file_issue_view" />
        <action
            android:id="@+id/show_env_info_view"
            app:destination="@id/environment_view" />
        <action
            android:id="@+id/show_device_info_view"
            app:destination="@id/device_view" />
        <action
            android:id="@+id/show_logs_view"
            app:destination="@id/logs_view" />
    </fragment>
    <fragment
        android:id="@+id/environment_view"
        android:name="com.amplifyframework.core.DevMenuEnvironmentView"
        tools:layout="@layout/fragment_environment_view" >
        <action
            android:id="@+id/env_view_to_main_view"
            app:destination="@id/main_view" />
    </fragment>
    <fragment
        android:id="@+id/device_view"
        android:name="com.amplifyframework.core.DevMenuDeviceView"
        tools:layout="@layout/fragment_device_view" >
        <action
            android:id="@+id/device_view_to_main_view"
            app:destination="@id/main_view" />
    </fragment>
    <fragment
        android:id="@+id/logs_view"
        android:name="com.amplifyframework.core.DevMenuLogsView"
        tools:layout="@layout/fragment_logs_view" >
        <action
            android:id="@+id/logs_view_to_main_view"
            app:destination="@id/main_view" />
    </fragment>
    <fragment
        android:id="@+id/file_issue_view"
        android:name="com.amplifyframework.core.DevMenuFileIssueView"
        tools:layout="@layout/fragment_file_issue_view" >
        <action
            android:id="@+id/file_issue_view_to_main_view"
            app:destination="@id/main_view" />
    </fragment>
</navigation>