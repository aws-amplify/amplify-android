<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-1dp">
        <shape android:dither="true">
            <corners android:radius="@dimen/map_search_resultTopHandleShadowRadius" />
            <gradient
                android:angle="90"
                android:startColor="#4d000000"
                android:endColor="#00000000" />
        </shape>
    </item>
    <item android:top="3dp">
        <shape>
            <corners
                android:topLeftRadius="@dimen/map_search_resultTopHandleRadius"
                android:topRightRadius="@dimen/map_search_resultTopHandleRadius" />
            <size android:height="@dimen/map_search_resultTopHandleHeight" />
            <solid android:color="@color/map_search_itemBackground" />
        </shape>
    </item>
    <item
        android:gravity="center"
        android:top="6dp">
        <shape>
            <corners android:radius="1.5dp" />
            <size
                android:width="28dp"
                android:height="3dp" />
            <solid android:color="@color/map_controls_border" />
        </shape>
    </item>
</layer-list>
